<div class="container text-center full-height" style="margin-top: 70px;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="form-container">
        <%= simple_form_for @cocktail do |f| %>
          <div class="form-description">
            <%= f.input :name %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>

          <%= f.submit class: "btn btn-primary btn-form btn-block" %>

        <% end %>
      </div>
    </div>
  </div>
</div>
