<div class="container text-center" style="margin-top: 70px;">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <%= simple_form_for @cocktail do |f| %>
        <div class="col-xs-12 col-sm-4 col-sm-offset-4">
          <div class="form-group">
            <%= f.input :name %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-4 col-sm-offset-4">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
