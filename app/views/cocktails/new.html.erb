<div class="container text-center full-height" style="margin-top: 70px;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <% @cocktail.errors.each do |attr,msg|  %>
        <div id="name_error" class="alert alert-danger" role="alert">
          <%=msg%>
        </div>
      <% end %>

      <div class="form-container">
        <%= simple_form_for @cocktail do |f| %>
          <div class="form-description">
            <%= f.input :name, placeholder: "Cocktail name", error: false, label: false, hint: false %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>

          <%= f.submit class: "btn btn-pink btn-form btn-block" %>

        <% end %>
      </div>
    </div>
  </div>
</div>
